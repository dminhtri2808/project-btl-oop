                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Hyperlink fx:id="troLai" focusTraversable="false" onAction="#onTroLai" text="Trở lại">
                    <font>
                        <Font size="13.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="185.0" top="30.0" />
                    </VBox.margin>
                </Hyperlink>
            </children>
        </VBox>
    </children>
</AnchorPane>
