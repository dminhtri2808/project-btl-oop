<AnchorPane prefHeight="500.0" prefWidth="500.0" styleClass="backgroundroot" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pj.Controller.ForgotPassword2Controller">
